<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Properties>
		<Property name="filename">logs/pmdb.log</Property>
	</Properties>
	<Appenders>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout>
				<Pattern>%d %p %C{1.} [%t] %m%n</Pattern>
			</PatternLayout>		
		</Console>
	</Appenders>
	<Loggers>
		<Logger name="org.xandercat.pmdb" level="debug" additivity="false">
			<AppenderRef ref="STDOUT"/>
		</Logger>
		<Root level="debug">
			<AppenderRef ref="STDOUT"/>
		</Root>
	</Loggers>
</Configuration>